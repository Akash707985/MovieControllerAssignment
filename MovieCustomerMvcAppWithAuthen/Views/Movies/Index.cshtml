@model IEnumerable<MovieCustomerMvcAppWithAuthen.Models.Movie>
@{
    ViewBag.Title = "Index";
}

<h2>Movies List</h2>
@Html.ActionLink("NewMovie", "Create", "Movies", null, new { @class="btn btn-success"})
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Movie Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@Html.ActionLink(movie.Name, "Details", "Movies", new { id = movie.Id }, null)</td>

               
            </tr>
        }
       
    </tbody>
</table>


